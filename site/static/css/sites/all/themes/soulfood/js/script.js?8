$(document).ready(function(){
	//Add Class to Outbound Links
  $("a[href*='http://']:not([href*='"+window.location.hostname+"'])")
        .addClass("ExternalLink").attr("target","_blank");


	//HIDE the Admin and reveal it when hovering
	function hiddenAdmin (divID) {
		$(divID).fadeTo(-1,0).hover(
			function(){
				$(this).fadeTo(100,1)
			},
			function(){
				$(this).fadeTo(200,0)
			});
	};
	
	// execute the function
	hiddenAdmin ("#loginout p");
	
	//Automatically Discover Document Links And Apply Class
	$('a[href]').each(function() {
	   if((C = $(this).attr('href').match(/[.](doc|xls|pdf)$/))) {
	       $(this).addClass(C[1]);
	   }
	});
	
	
	//HIDE the BLOCK-EDIT LINKS and reveal them when hovering
	function blockEdit () {
		$('.block .block_edit').fadeTo(-1,0);
		$('.block').hover(
			function(){
				var myBlockID = $(this).attr('id');
				var myBlock = '#' + myBlockID + ' .block_edit';
				$(myBlock).fadeTo(100,1)
			},
			function(){
				$('.block .block_edit').fadeTo(200,0)
			});
	};
	
	// execute the function
	blockEdit ("#loginOut");
	
	//LABEL the last BLOCK
	$('#sidebar-last .block:last').addClass('last');
	
	//LABEL the last table cell
	$('tr td:last').addClass('last');
	
	//HIDE the Logo and fade it in
	function logoDown() {
		// move the object mostly out of site
		$("#logo").animate({
			"left": "-=30px",
			"opacity": "0"
			}, -1);
		$("#logo").animate({
			"left": "+=30px",
			"opacity": "1",
			"easing": "easeOutBounce"
			}, 2000);
	}
	// execute the function
	logoDown();
	
});